<%=f.label :name%>
<%=f.text_field :name %><br>
<%=f.label :length%>
<%=f.text_field :length%><br>
<%=f.label :difficulty%>
<%=f.text_field :difficulty%><br>
<%=f.label :dogs%>
<%=f.text_field :dogs %><br>
<%=f.label :notes %>
<%=f.text_field :notes%><br>
  <br>

