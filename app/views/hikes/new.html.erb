<% if @hike.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@hike.errors.count, "error") %> prohibited this user from being created:</h2>

    <ul>
      <% @hike.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h1>Submit a New Hike!</h1>

<%=form_for(@hike) do |f|%><br>
<%=f.label :date%>
<%=f.date_select(:date) %><br>
<%=f.label :rating%>
<%=f.text_field :rating%>Number 1 to 5<br>
<%=f.label :comments%>
<%=f.text_field :comments%><br>
<%=f.label :trail%>
<%=f.collection_select(:trail_id, Trail.all, :id, :name)%>
<%=f.hidden_field :user_id, value: current_user.id %>
  <br>

<%=f.submit "Create Hike"%>
<%end%>