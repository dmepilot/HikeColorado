<!DOCTYPE html>
<html>
  <head>
    <title>HikeColorado</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <body>
 
          <ul class="navbar">
            <li class="navbar"><%=link_to "HOME", {controller: "static", action: "welcome"}, class: "navbar"%></li>
            <%if !logged_in?%>
            <li class="navbar"><%=link_to "Login", login_path, class:"navbar"%></li>
            <li class="navbar"><%=link_to "Sign Up", signup_path, class: "navbar"%></li>
            <%else%> 
            <li class="logout"><%=link_to "Log Out", logout_path, method: "delete", class: "navbar" %></li>
            <li class="navbar"><%=link_to "Submit a Hike", new_hike_path, class: "navbar"%></li>
            <%end%>
          </ul>
        

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
